<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.prac7database.SendActivity">
    <TableLayout
        android:id="@+id/tbale_send"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:id="@+id/txenroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Enrollnment No : " />
            <Spinner
                android:id="@+id/edrollsend"
                android:layout_height="wrap_content"
                android:layout_width="200dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tx1"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Recipent No : " />
            <TextView
                android:id="@+id/edno"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_width="200dp"
                android:gravity="center_horizontal"
                android:text=""/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tx2"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:text="Enter Text : "/>
            <TextView
                android:id="@+id/edmsg"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text=""/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnsend"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:text="Check and Send"
        android:typeface="serif"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:background="@color/accent"
        android:layout_marginLeft="70dp"
        android:layout_gravity="center_vertical"/>


</LinearLayout>
